@{
    ViewData["Title"] = "Home | Job opportunities";
}

<div class="container-fluid " >
    <div class="row" >
        <div class="position-relative p-0 ">
            <img src="~/images/fondo1.png" alt="n/a" style="width: 100%; height: 100vh;">
            <div class="" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -470%);">
                <h1 class="text-center m-0" style="color: #fff;">Job opportunities</h1>
            </div>
            <div class="text-center position-absolute top-50 start-50 d-flex flex-column " style="transform: translate(-50%, -48%);" >
                <a asp-controller="Jobs" asp-action="Index" class="btn btn-primary btn-sm m-2 fw-bold" style="width: 250px; box-shadow: 5px 5px 2px 0px #000;">See job offer</a>
                <a asp-controller="Jobs" asp-action="Create" class="btn btn-primary btn-sm m-2 fw-bold" style="width: 250px; box-shadow: 5px 5px 2px 0px #000;">Create job offer</a>
                <a asp-controller="Employees" asp-action="Index" class="btn btn-success btn-sm m-2 fw-bold" style="width: 250px; box-shadow: 5px 5px 2px 0px #000;">List employees</a>
                <a asp-controller="Employees" asp-action="Create" class="btn btn-success btn-sm m-2 fw-bold" style="width: 250px; box-shadow: 5px 5px 2px 0px #000;">Register employees</a>
            </div>
        </div>
    </div>
</div>
